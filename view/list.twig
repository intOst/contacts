<div class="container">
    <div class="row">
        <div class="col-12">
            <p class="text-right">
                <a class="btn btn-info" data-toggle="collapse" href="#collapseFilter" role="button" aria-expanded="false" aria-controls="collapseExample">
                    <i class="fas fa-filter"></i>
                </a>
                <a class="btn btn-info" data-toggle="collapse" href="#collapseSearch" role="button" aria-expanded="false" aria-controls="collapseExample">
                    <i class="fas fa-search"></i>
                </a>
            </p>
            <div class="collapse w-50 mx-auto" id="collapseSearch">
                <div class="card card-body">
                    <form>
                        <div class="form-group">
                            <input type="text" name="search" value="{% if search %}{{ search }}{% endif %}" class="form-control" placeholder="{{ text_search }}">
                        </div>
                        <div class="d-flex justify-content-around">
                            <button type="submit" class="btn btn-primary d-flex mx-auto">{{ text_search }}</button>
                            <span class="btn btn-primary d-flex mx-auto" id="resetForm">{{ text_reset }}</span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="collapse w-50 mx-auto" id="collapseFilter">
                <div class="card card-body">
                    <form>
                        <div class="form-group">
                            <input type="text" name="name" value="{% if filter_data.name %}{{ filter_data.name }}{% endif %}" class="form-control" placeholder="{{ text_name }}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="surname" value="{% if filter_data.surname %}{{ filter_data.surname }}{% endif %}" class="form-control" placeholder="{{ text_surname }}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="number" value="{% if filter_data.number %}{{ filter_data.number }}{% endif %}" class="form-control" placeholder="{{ text_number }}">
                        </div>
                        <div class="d-flex justify-content-around">
                            <button type="submit" class="btn btn-primary d-flex mx-auto">{{ text_filter }}</button>
                            <span class="btn btn-primary d-flex mx-auto" id="resetForm">{{ text_reset }}</span>
                        </div>
                    </form>


                </div>
            </div>
        </div>
        <div class="col-12">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <td>{{ text_name }}</td>
                    <td class="text-right">{{ text_actions }}</td>
                </tr>
                </thead>
                {% for contact in contacts %}
                    <tbody>
                    <tr>
                        <td>{{ contact.name }}</td>
                        <td class="text-right">
                            <a href="{{ view }}/{{ contact.id }}" data-toggle="tooltip" title="{{ button_show }}" class="btn btn-success">
                                <i class="fas fa-eye"></i>
                            </a>

                            <a href="{{ edit }}/{{ contact.id }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary">
                                <i class="fa fa-edit"></i>
                            </a>

                            <a href="{{ remove }}/{{ contact.id }}" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>

                        </td>
                    </tr>
                    </tbody>
                {% endfor %}
                <tfoot>
                <tr>
                    <td colspan="1"></td>
                    <td class="text-right">
                        <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                        </a>
                    </td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('body').on('click','#resetForm',function () {
            $(this).closest('form').find('input').each(function () {
                console.log($(this));
                $(this).val('');
            })
            $(this).closest('form').submit();
        })
    });

</script>